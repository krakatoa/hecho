<%= image_tag(@vendedor.foto_path, :width => "100", :height => "100") if @vendedor.foto_path %>
<label>Nro. de Vendedor:</label> <%= @vendedor.credencial %><br />
<label>Nombre y Apellido: </label><%= "#{@vendedor.nombre} #{@vendedor.apellido}" %> (<%= @vendedor.edad %> anios)<br />
<label>Sexo: </label><%= @vendedor.sexo %><br />
<label>Nacionalidad: </label><%= mostrar_provincia_pais(@vendedor)%><br />
<label>Persona del equipo que realizo la inscripcion: </label><%= @vendedor.personal_inscripcion %><br />
<label>Fecha de Inscripcion: </label><%= @vendedor.fecha_inscripcion %><br />
<br />
<%= link_to_function("Devolver plata", :onclick => "popup_devolver_plata(#{@vendedor.id})") %><br />
<label>Total Revistas Compradas: </label><%= @vendedor.total_vendidas %><br />
<br />
<%- if @vendedor.puntos_de_venta.size > 0 %>
  <table>
    <thead>
      <th>Puntos de venta</th>
      <th>Activo</th>
    </thead>
    <%- @vendedor.puntos_de_venta.each do |puntos_de_venta| %>
      <tr>
        <td><%= puntos_de_venta.lugar %></td>
        <td><%= puntos_de_venta.activo? ? "Si" : "No" %></td>
      </tr>
    <%- end %>
  </table>
<%- end %>
<br />
<%= link_to "Compras", vendedor_entregas_path(@vendedor) %>
<%= link_to "Servicios Sociales", vendedor_uso_servicios_path(@vendedor) %>
<%= link_to "Credencial", credencial_vendedor_path(@vendedor) %>
<br />
<%= link_to "ver mas datos", encuesta_vendedor_path(@vendedor) %>
